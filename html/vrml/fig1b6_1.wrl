#VRML V2.0 utf8

EXTERNPROTO Arc [
  field SFVec3f centerAt
  field SFFloat radius
  field SFFloat startAt
  field SFFloat angle
  field SFInt32 resolution
  field SFColor color
]"p_arc.wrl" 

EXTERNPROTO Line [
  field SFVec3f startAt
  field SFVec3f endAt
  field SFColor color
]"p_line.wrl"

EXTERNPROTO Label[
  field MFString text
  field MFString sub
  field SFVec3f position
  field SFFloat size
  field SFColor color
]"p_label.wrl"

