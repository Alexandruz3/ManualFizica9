]"p_darrow.wrl"

EXTERNPROTO DLine [
  field SFVec3f startAt
  field SFVec3f endAt
  field SFColor color
  field SFInt32 steps
]"p_dline.wrl"

EXTERNPROTO Ray [
	eventIn	SFVec3f	set_Position
	eventIn	SFVec3f	set_Direction
	field SFVec3f Position
	field SFVec3f Direction
	field SFFloat StemRadius
 field SFFloat HeadPos
	field SFFloat HeadRadius
	field SFFloat HeadSize
	field SFColor HeadColor
	field	SFColor	StemColor
]"p_ray.wrl"

EXTERNPROTO SqSheet [
	field SFInt32 nx
	field SFInt32 ny
	field SFFloat d
  field SFColor color
]"p_sqs.wrl"

EXTERNPROTO Label[
  field MFString text
  field MFString sub
  field SFVec3f position
  field SFFloat size
  field SFColor color
]"p_label.wrl"

